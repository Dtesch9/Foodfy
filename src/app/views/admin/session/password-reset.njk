{% extends "admin/layout.njk" %}

{% block title %} <title>Login</title> {% endblock %}

{% block content %}
  <div class="app">
    <form action="/admin/password-reset" method="POST">

      <input type="hidden" name="token" value="{{token}}">

      <div class="head-login">
        <div>
          <a href="/">
            <img src="/logo.png" alt="">
          </a>
        </div>
        <div class="title">
          <h1>Iniciar Sess√£o</h1>
        </div>
      </div>

      <div class="fields">
        <div class="register-fields user-fields login-container">
       
          <div class="field">
            <p>Email</p>
            <input 
              type="text" 
              name="email"
              value="{{user.email}}"
              placeholder="Digite seu email"
              {# required #}
              onblur="Validate.apply(this, 'validEmail')"
            >
          </div>
          
          <div class="field">
            <p>Nova senha</p>
            <input 
              type="password" 
              name="password" 
              placeholder="Digite sua nova senha"
              {# required #}
            >
          </div>

          <div class="field">
            <p>Repetir senha</p>
            <input 
              type="password" 
              name="passwordRepeat" 
              placeholder="Repetir sua nova senha"
              {# required #}
            >
          </div>

          <div class="login-footer forgot-footer">
            <button class="button" type="submit">Nova senha</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block script %}
  <script src="/scripts/hideNav.js"></script>
{% endblock %}