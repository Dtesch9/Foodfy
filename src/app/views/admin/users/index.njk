{% extends "admin/layout.njk" %}

{% block title %} <title>Ol√° {{user.name}}</title> {% endblock %}

{% block content %}
  <div class="app">
    <form action="/admin/profile?_method=PUT" method="POST">

      <div class="head-form">
        <div class="title">
          <h1>Bem vindo {{user.name}}</h1>
        </div>

        <div class="form-button user-button">
          <button type="submit">Salvar</button>
          <a href="/admin/users">Cancelar</a>
        </div>
      </div>

      <div class="fields">
        <div class="register-fields user-fields">
          <div class="field">
            <p>Nome</p>
            <input 
              type="text" 
              name="name" 
              value="{{user.name}}" 
              placeholder="Digite o nome completo"
              {# required   #}
            >
          </div>

          <div class="field">
            <p>Email</p>
            <input 
              type="text" 
              name="email" 
              value="{{user.email}}" 
              placeholder="Digite seu email"
              {# required #}
              onblur="Validate.apply(this, 'validEmail')"
            >
          </div>
          
          <div class="field">
            <p>Senha</p>
            <input 
              type="password" 
              name="password" 
              placeholder="Digite sua senha"
              {# required #}
            >
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}